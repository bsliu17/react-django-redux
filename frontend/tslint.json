{
  "extends": [
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "import-name": false,
    "object-shorthand-properties-first": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "lowercase-first"
      }
    ],
    "max-line-length": [
      true,
      150
    ],
    "semicolon": [
      true,
      "never"
    ]
  },
  "linterOptions": {
    "exclude": [
      "./tsconfig.json",
      "./node_modules",
      "**/*.d.ts"
    ]
  }
}